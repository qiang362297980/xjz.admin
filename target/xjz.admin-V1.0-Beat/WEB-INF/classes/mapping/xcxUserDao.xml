<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secondBack.dao.XcxUserDao">

    <sql id="xcxUser">
        a.id AS "id",
        a.mobile AS "mobile",
        a.open_id AS "openId",
        a.user_name AS "userName",
        a.area AS "area",
        a.status AS "status",
        a.follow_num AS "followNum",
        a.look_num AS "lookNum",
        a.create_date AS "createDate",
        a.update_date AS "updateDate",
        a.del_flag AS "delFlag"
    </sql>

    <resultMap id="xcxUser" type="com.secondBack.entity.XcxUser">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="open_id" property="openId" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="area" property="area" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="follow_num" property="followNum" jdbcType="INTEGER"/>
        <result column="look_num" property="lookNum" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
        <result column="startTime" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="del_flag" property="delFlag" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="get" resultMap="xcxUser">
        SELECT
          <include refid="xcxUser"/>
        FROM
          xcx_user a
        WHERE
          a.id = #{id}
    </select>

    <select id="getByOpenId" resultMap="xcxUser">
        SELECT
            <include refid="xcxUser"/>
        FROM
            xcx_user a
        WHERE
            a.del_flag = '0' and a.open_id = #{openId}
    </select>

    <select id="getList" resultMap="xcxUser">
        SELECT
          <include refid="xcxUser"/>
        FROM
          xcx_user a
        <where>
            a.del_flag = '0'
            <if test="mobile != '' and mobile != null">
                and a.mobile LIKE concat('%',#{mobile},'%')
            </if>
            <if test="status != null and status != ''">
                and a.status = #{status}
            </if>
            <if test="startTime != null and startTime != ''">
                AND TO_DAYS(a.create_date) = TO_DAYS(#{startDate})
            </if>
        </where>
    </select>

    <update id="update">
        UPDATE xcx_user a SET
            a.mobile = #{mobile},
            a.open_id = #{openId},
            a.area = #{area},
            a.status = #{status},
            a.follow_num = #{followNum},
            a.look_num = #{lookNum},
            a.create_date = #{createDate},
            a.update_date = #{updateDate},
            a.del_flag = #{delFlag}
        WHERE a.id = #{id}
    </update>
    
    <update id="increaseFollowNumWithOpenId" parameterType="java.lang.String">  
    	update xcx_user set look_num = IFNULL(look_num,0) + 1 where id = #{opendid}
    </update>
    
     <update id="reduceFollowNumWithOpenId" parameterType="java.lang.String">  
    	update xcx_user set look_num = IFNULL(look_num,0) - 1 where id = #{opendid}
    </update>

</mapper>